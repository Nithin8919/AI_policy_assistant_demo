# Weaviate Configuration for Legal Document Processing
# Copy this to .env file and update with your credentials

# Weaviate Cloud Configuration
WEAVIATE_URL=https://your-cluster-url.weaviate.network
WEAVIATE_API_KEY=your-api-key-here

# Alternative: Local Weaviate (if running locally)
# WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=

# Collection Configuration
WEAVIATE_COLLECTION_NAME=LegalDocuments

# Embedding Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Chunking Configuration
MAX_CHUNK_SIZE=200
MIN_CHUNK_SIZE=20
CHUNK_OVERLAP=50

# Legal Processing Configuration
MIN_CONFIDENCE_SCORE=0.3
ENABLE_LEGAL_ENTITY_EXTRACTION=true
ENABLE_KEYWORD_EXTRACTION=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=legal_chunking.log
